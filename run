#!/usr/bin/env bash

make || exit 1

assert() {
  expected="$1"
  input="$2"

  ./m "$input" >tmp.s || exit 1
  gcc -static -o tmp tmp.s || exit 1
  ./tmp
  actual="$?"

  if [ "$actual" -ne "$expected" ]; then
    echo "expected $expected, but got $actual" >&2
    exit 1
  fi
}

assert 0 0
assert 40 40
assert 20 '5+19-4'
assert 40 ' 12 + 33 - 5 '
assert 46 '4 + 6 * 7'
assert 15 '5 * (9 - 6)'
assert 4 '(3 + 5) / 2'
assert 10 '-10 + 20'
assert 10 '--10'
assert 10 '--+10'

echo 'OK'
